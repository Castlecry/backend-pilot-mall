<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pilot.user.mapper.UmsUserMapper">
    <resultMap id="BaseResultMap" type="com.pilot.user.domain.UmsUser">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectByUsername" resultMap="BaseResultMap">
        SELECT id, username, password, create_time
        FROM ums_user
        WHERE username = #{username}
    </select>

    <insert id="insert" parameterType="com.pilot.user.domain.UmsUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ums_user (username, password, create_time)
        VALUES (#{username}, #{password}, #{createTime})
    </insert>
</mapper>
